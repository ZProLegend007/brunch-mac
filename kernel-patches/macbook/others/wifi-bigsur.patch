+	uint8_t mac[6] = { 0 };
+	size_t len = strlen("macaddr=") + 17 + 1; /* 17 = "aa:bb:cc:dd:ee:ff" */
+	unsigned i = 0;
+	unsigned long res = 0;
+	char tmp[3];
+
